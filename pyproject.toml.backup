[project]
name = "mcp-k8s-server"
version = "0.1.0"
description = "Kubernetes management MCP server"
readme = "README.md"
requires-python = ">=3.13"
dependencies = [
    "mcp>=1.6.0",
    "kubernetes>=30.0.0",
    "pyyaml>=6.0.1",
    "httpx>=0.28.1",
    "click>=8.1.8",
    "pydantic>=2.11.1",
    "pydantic-settings>=2.8.1",
    "pip>=25.0.1",
]

[project.scripts]
mcp-k8s-server = "mcp_k8s_server.main:main"
